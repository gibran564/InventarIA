<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reabastecer_fragment"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvProductoNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reabastecer Producto"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editStock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nueva Cantidad de Stock"
        android:inputType="number" />

    <Button
        android:id="@+id/btnReabastecer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reabastecer" />

</LinearLayout>
